<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/top_layout_001">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SIMPLE VIEW"
            android:textSize="20dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Command:  "
            android:textSize="16dp"
            android:textColor="#ff5555"
            android:layout_alignParentRight="true"
            android:id="@+id/txt_command_show"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/top_layout_002">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:id="@+id/btn_monitor1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="Camera 1"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:id="@+id/btn_monitor2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/camera_a"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="Camera 2"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:paddingTop="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="Power: "
                    android:layout_marginTop="10dp" />
                <ToggleButton
                    android:background="@drawable/toggle_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButtonPower"
                    android:layout_gravity="right"
                    android:textOff=""
                    android:textOn=""
                     />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/linearLayout">
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/button_back"
                android:id="@+id/btn_preset1"
                android:padding="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/list_one"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="PRESET"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="description"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/button_back"
                android:id="@+id/btn_preset2">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/list_two"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="PRESET"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="description"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/button_back"
                android:id="@+id/btn_preset3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:text="+"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/button_back"
                android:padding="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zoom"
                        android:textSize="22dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/progress_left"
                            android:padding="8dp"
                            android:id="@+id/btn_zoom_down"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="47%"
                            android:textSize="20dp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/tv_progressZoom"
                            />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/progress_right"
                            android:padding="8dp"
                            android:id="@+id/btn_zoom_up"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUTO"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimaryView_blue"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/relativeLayoutProgress">
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:id="@+id/seekBarZoom"
                        android:layout_marginTop="5dp" />
                    <com.bluetea.entolidemo.ui.views.CustomProgressBar
                        android:id="@+id/progressBarZoom"
                        style="@style/CustomProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:progress="50"
                        android:max = "100"
                        android:layout_marginTop="10dp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@drawable/button_back">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lens"
                        android:textSize="22dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/progress_left"
                            android:padding="8dp"
                            android:id="@+id/btn_lens_down"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20%"
                            android:textSize="20dp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/tv_progressLens"
                            />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/progress_right"
                            android:padding="8dp"
                            android:id="@+id/btn_lens_up"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUTO"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimaryView_blue"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:id="@+id/seekBarLens"
                        android:layout_marginTop="5dp" />
                    <com.bluetea.entolidemo.ui.views.CustomProgressBar
                        android:id="@+id/progressBarLens"
                        style="@style/CustomProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:progress="50"
                        android:max = "100"
                        android:layout_marginTop="10dp" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/button_back"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focus"
                        android:textSize="22dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/progress_left"
                            android:padding="8dp"
                            android:id="@+id/btn_focus_down"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textSize="20dp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/tv_progressFocus"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/progress_right"
                            android:padding="8dp"
                            android:id="@+id/btn_focus_up"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUTO"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimaryView_blue"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:id="@+id/seekBarFocus"
                        android:layout_marginTop="5dp" />
                    <com.bluetea.entolidemo.ui.views.CustomProgressBar
                        android:id="@+id/progressBarFocus"
                        style="@style/CustomProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:progress="50"
                        android:max = "100"
                        android:layout_marginTop="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:padding="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pan Control"
                    android:textSize="22dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CENTER"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimaryView_blue"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                >
                <com.bluetea.entolidemo.circularseekbar.DoughterCircularSeekBar
                    android:id="@+id/doughterSeekPan1"
                    android:layout_width="259dp"
                    android:layout_height="300dp"
                    app:start_angle="270"
                    app:end_angle="270"
                    app:circle_x_radius="300"
                    app:circle_y_radius="300"
                    app:use_custom_radii="true"
                    app:progress="6"
                    app:max="12"
                    app:pointer_alpha_ontouch="100"
                    app:pointer_color="#149df00"
                    app:pointer_halo_color="#149df00"
                    app:circle_progress_color="@color/colorPrimaryView_blue"
                    app:circle_color="#ffa8a8a8"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:clickable="false" />

                <com.bluetea.entolidemo.circularseekbar.DoughterCircularSeekBar
                    android:id="@+id/doughterSeekPan2"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:start_angle="270"
                    app:end_angle="270"
                    app:circle_x_radius="300"
                    app:circle_y_radius="300"
                    app:use_custom_radii="true"
                    app:progress="6"
                    app:max="12"
                    app:pointer_alpha_ontouch="100"
                    app:pointer_color="#149df00"
                    app:pointer_halo_color="#149df00"
                    app:circle_progress_color="@color/colorPrimaryView_blue"
                    app:circle_color="#ffa8a8a8"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:clickable="false" />

                <com.bluetea.entolidemo.circularseekbar.DoughterCircularSeekBar
                    android:id="@+id/doughterSeekPan3"
                    android:layout_width="270dp"
                    android:layout_height="267dp"
                    app:start_angle="270"
                    app:end_angle="270"
                    app:circle_x_radius="300"
                    app:circle_y_radius="300"
                    app:use_custom_radii="true"
                    app:progress="6"
                    app:max="12"
                    app:pointer_alpha_ontouch="100"
                    app:pointer_color="#149df00"
                    app:pointer_halo_color="#149df00"
                    app:circle_progress_color="@color/colorPrimaryView_blue"
                    app:circle_color="#ffa8a8a8"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"></FrameLayout>

                <FrameLayout
                    android:layout_width="223dp"
                    android:layout_height="223dp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <FrameLayout
                    android:layout_width="215dp"
                    android:layout_height="215dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:id="@+id/tvPan"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryView_blue"
                        android:textSize="60dp"
                        android:textIsSelectable="false"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </FrameLayout>

                <com.bluetea.entolidemo.circularseekbar.CircularSeekBar
                    android:id="@+id/fatherSeekPan"
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    app:start_angle="270"
                    app:end_angle="270"
                    app:circle_x_radius="300"
                    app:circle_y_radius="300"
                    app:use_custom_radii="true"
                    app:progress="6"
                    app:max="12"
                    app:pointer_radius="0"
                    app:pointer_alpha_ontouch="100"
                    app:pointer_color="#ff48d8b7"
                    app:circle_progress_color="#eeeeee"
                    app:circle_color="#eeeeee"
                    app:pointer_halo_color="#149df00"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible" >

                </com.bluetea.entolidemo.circularseekbar.CircularSeekBar>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>